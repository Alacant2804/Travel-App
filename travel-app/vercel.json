{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist"
    }
  ],
  "env": {
    "MONGO_URI": "mongodb+srv://admin:t7fHpGcQHDWp5enb@travelapp.3mmtzb4.mongodb.net/test?retryWrites=true&w=majority&appName=TravelApp",
    "JWT_SECRET": "supersecretkey123",
    "CLIENT_ORIGIN": "https://your-frontend-url.vercel.app",
    "VITE_API_URL": "https://your-backend-url.vercel.app/api/auth"
  },
  "installCommand": "cd client && npm install && cd ../backend && npm install",
  "buildCommand": "cd client && npm run build",
  "outputDirectory": "client/dist"
}
